{
	"name": "vt-api",
	"version": "0.0.1",
	"private": true,
	"description": "",
	"license": "UNLICENSED",
	"author": "quanqvinh",
	"scripts": {
		"cz": "git-cz",
		"prebuild": "rimraf dist",
		"build": "nest build",
		"build-all": "concurrently -c auto \"pnpm build admin\" \"pnpm build sale\" \"pnpm build client\"",
		"format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix --cache --max-warnings=0",
		"migrate": "migrate -f ./src/database/migrations/config.ts -m ./src/database/migrations",
		"prepare": "husky install",
		"start": "nest start",
		"start:debug": "nest start --debug --watch",
		"start:dev": "nest start --watch",
		"start:dev-all": "concurrently -c auto \"pnpm:start:dev:*\"",
		"start:dev:ADMIN": "nest start --watch admin",
		"start:dev:CLIENT": "nest start --watch client",
		"start:dev:SALE": "nest start --watch sale",
		"start:prod": "node dist/apps/client/main",
		"start:prod:ADMIN": "node dist/apps/admin/main",
		"start:prod:SALE": "node dist/apps/sale/main"
	},
	"lint-staged": {
		"*.{ts,js}": "eslint --cache --fix --max-warnings=0",
		"*.{json,md}": "prettier --write",
		"package.json": "npx sort-package-json"
	},
	"config": {
		"commitizen": {
			"path": "@commitlint/cz-commitlint"
		}
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.282.0",
		"@casl/ability": "^6.5.0",
		"@joi/date": "^2.1.0",
		"@nestjs/common": "10.0.5",
		"@nestjs/config": "^2.3.4",
		"@nestjs/core": "10.0.5",
		"@nestjs/jwt": "^10.1.0",
		"@nestjs/mongoose": "^9.2.2",
		"@nestjs/passport": "^9.0.3",
		"@nestjs/platform-express": "10.0.5",
		"@nestjs/platform-socket.io": "^10.1.0",
		"@nestjs/platform-ws": "^10.1.0",
		"@nestjs/serve-static": "^3.0.1",
		"@nestjs/swagger": "^7.1.1",
		"@nestjs/websockets": "^10.1.0",
		"aws-sdk": "^2.1326.0",
		"bcrypt": "^5.1.0",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.0",
		"compression": "^1.7.4",
		"concurrently": "^8.2.0",
		"joi": "^17.8.3",
		"joi-phone-number": "^5.1.1",
		"lodash": "^4.17.21",
		"mongoose": "^7.0.0",
		"mongoose-delete": "^1.0.1",
		"mongoose-lean-virtuals": "^0.9.1",
		"passport": "^0.6.0",
		"passport-jwt": "^4.0.1",
		"pluralize": "^8.0.0",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"rotating-file-stream": "^3.1.0",
		"rxjs": "^7.2.0",
		"short-unique-id": "^4.4.4",
		"socket.io-client": "^4.7.2",
		"ts-migrate-mongoose": "^2.4.13",
		"twilio": "^4.9.0",
		"uuid": "^9.0.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^18.2.0",
		"@commitlint/config-conventional": "^18.1.0",
		"@commitlint/cz-commitlint": "^18.2.0",
		"@commitlint/prompt": "^18.2.0",
		"@nestjs/cli": "^9.5.0",
		"@nestjs/schematics": "^9.2.0",
		"@nestjs/testing": "^9.4.3",
		"@types/bcrypt": "^5.0.0",
		"@types/express": "^4.17.13",
		"@types/jest": "28.1.4",
		"@types/joi-phone-number": "^5.0.5",
		"@types/lodash": "^4.14.194",
		"@types/mongoose-delete": "^1.0.0",
		"@types/multer": "^1.4.7",
		"@types/node": "^16.18.13",
		"@types/passport-jwt": "^3.0.8",
		"@types/socket.io": "^3.0.2",
		"@types/supertest": "^2.0.11",
		"@typescript-eslint/eslint-plugin": "^5.0.0",
		"@typescript-eslint/parser": "^5.0.0",
		"commitizen": "^4.3.0",
		"eslint": "^8.0.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
