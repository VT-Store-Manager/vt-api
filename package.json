		"ts-jest": "28.0.5",
		"ts-loader": "^9.2.3",
		"ts-node": "^10.0.0",
		"tsconfig-paths": "4.0.0",
		"typescript": "^5.1.6"
	},
	"engines": {
		"node": ">=16.x",
		"pnpm": ">=8.x"
	}
}
